# k6 Load Testing Configuration
# Copy this file to .env and customize as needed

# Application URLs
BASE_URL=http://chat-server:8080
BASE_WS_URL=ws://chat-server:8080

# Prometheus Remote Write (for real-time metrics)
K6_PROMETHEUS_RW_SERVER_URL=http://prometheus:9090/api/v1/write
K6_PROMETHEUS_RW_TREND_AS_NATIVE_HISTOGRAM=true

# k6 Web Dashboard
K6_WEB_DASHBOARD=true
K6_WEB_DASHBOARD_EXPORT=/results/html-report.html

# Grafana Configuration (for setup script)
GRAFANA_URL=http://localhost:3100
GRAFANA_USER=admin
GRAFANA_PASS=admin

# Test Configuration Overrides
# Uncomment to override default values in test scenarios

# Soak Test: Run short version (15 min instead of 2+ hours)
# SHORT_SOAK=true

# Pre-existing chatroom ID (optional - tests will create if not provided)
# CHATROOM_ID=your-chatroom-id-here

# Debugging
# K6_DEBUG=true
# K6_VERBOSE=true
